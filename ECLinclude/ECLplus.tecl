inline void msgWait(int channel) {
	int received = false;
	goto BEGIN;
LOOP:
	wait(1);
BEGIN:
	msgCheck(received, channel);
	unless (received) goto LOOP;
}

inline void ECLplusReset() {
	msgResetAll();
	playerAllowShot(1);
	playerAllowBomb(1);
	GI4 = 0;
	GI5 = 0;
	GI6 = 0;
	GI7 = 0;
}

